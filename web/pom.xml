<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<name>Kuali Rice Web</name>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.kuali.rice</groupId>
		<artifactId>rice</artifactId>
		<version>1.0.1</version>
	</parent>
	<artifactId>rice-web</artifactId>
	<packaging>war</packaging>

	<dependencies>
		<dependency>
			<groupId>org.kuali.rice</groupId>
			<artifactId>rice-impl</artifactId>
			<version>1.0.1</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>compile</phase>
                        <configuration>
                            <tasks>
                                <echo>Extracting Help Files</echo>
                                <unzip src="${basedir}/RiceHelp.zip" 
                                    dest="${project.build.directory}/help/kr/static/help/"/>
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
				    <!-- exclude the sample app files and the jars that we don't want to include -->
					<warSourceExcludes>**/ojdbc14*.jar, **/mysql*.jar, **/junit*.jar, **/htmlunit*.jar, **/jetty*.jar, **/jasper*.jar, **/jsp*.jar</warSourceExcludes>
                    <webResources>
                        <resource>
                            <!-- this is relative to the pom.xml directory.  Including the extracted help files -->
                            <directory>target/help</directory>
                        </resource>
                    </webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
