<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<bean id="config" class="org.kuali.rice.core.config.spring.ConfigFactoryBean">
		<property name="configLocations">
			<list>
				<value>classpath:META-INF/ksb-test-config.xml</value>
			</list>
		</property>
	</bean>

	<bean id="configProperties" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
		<property name="targetObject" ref="config" />
		<property name="targetMethod" value="getProperties" />
	</bean>

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="properties" ref="configProperties" />
	</bean>

	<bean id="jotm" class="org.springframework.transaction.jta.JotmFactoryBean">
      <property name="defaultTimeout" value="${transaction.timeout}"/>
    </bean>

	<bean id="dataSource" class="org.kuali.rice.core.database.XAPoolDataSource">
		<property name="transactionManager" ref="jotm" />
		<property name="driverClassName" value="${datasource.driver.name}" />
		<property name="url" value="${datasource.url}" />
		<property name="maxSize" value="${datasource.pool.maxSize}" />
		<property name="minSize" value="${datasource.pool.minSize}" />
		<property name="maxWait" value="${datasource.pool.maxWait}" />
		<property name="validationQuery" value="${datasource.pool.validationQuery}" />
		<property name="username" value="${datasource.username}" />
		<property name="password" value="${datasource.password}" />
	</bean>

    <bean id="nonTransactionalDataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${datasource.driver.name}"/>
        <property name="url" value="${datasource.url}"/>
        <property name="maxActive" value="${datasource.pool.maxActive}"/>
        <property name="minIdle" value="${datasource.minIdle}" />
        <property name="initialSize" value="${datasource.initialSize}"/>
        <property name="validationQuery" value="${datasource.pool.validationQuery}"/>
        <property name="username" value="${datasource.username}" />
        <property name="password" value="${datasource.password}" />
        <property name="accessToUnderlyingConnectionAllowed" value="${datasource.accessToUnderlyingConnectionAllowed}"/>
    </bean>

	<bean id="cache" class="org.kuali.rice.ksb.messaging.RiceCacheExporterFactoryBean" />

	<bean id="rice" class="org.kuali.rice.core.config.RiceConfigurer">
		<property name="serviceNamespace" value="KEW" />
		<property name="dataSource" ref="dataSource" />
		<property name="nonTransactionalDataSource" ref="nonTransactionalDataSource" />
		<property name="transactionManager" ref="jotm" />
		<property name="userTransaction" ref="jotm" />
		<property name="rootConfig" ref="config" />
		<property name="additionalSpringFiles">
		  <list>
		    <value>classpath:KSBTestServiceOverrides.xml</value>
		  </list>
		</property>
		<!-- <property name="knsConfigurer">
	        <bean class="org.kuali.rice.kns.config.KNSConfigurer"/>
		</property>
		<property name="kimConfigurer">
	        <bean class="org.kuali.rice.kim.config.KIMConfigurer" />
		</property> -->
		<property name="ksbConfigurer">
			<bean class="org.kuali.rice.ksb.messaging.config.KSBConfigurer">
				<property name="serviceServletUrl" value="http://localhost:${ksb.testharness.port}/en-test/remoting/" />
				<property name="nonTransactionalMessageDataSource" ref="nonTransactionalDataSource" />
				<property name="services">
					<list>
						<bean class="org.kuali.rice.ksb.messaging.SOAPServiceDefinition">
							<property name="service">
								<ref bean="soapService" />
							</property>
							<property name="localServiceName" value="soap-Queue" />
							<property name="serviceNameSpaceURI" value="testNameSpace" />
							<property name="priority" value="3" />
							<property name="retryAttempts" value="1" />
							<property name="busSecurity" value="false"></property>
						</bean>
						<bean class="org.kuali.rice.ksb.messaging.SOAPServiceDefinition">
							<property name="service">
								<ref bean="soapService" />
							</property>
							<property name="localServiceName" value="soap-repeatTopic" />
							<property name="serviceNameSpaceURI" value="testNameSpace" />
							<property name="priority" value="3" />
							<property name="queue" value="false" />
							<property name="retryAttempts" value="1" />
						</bean>
						<bean class="org.kuali.rice.ksb.messaging.JavaServiceDefinition">
							<property name="service">
								<ref bean="testLocalServiceFavoriteCall" />
							</property>
							<property name="localServiceName" value="testLocalServiceFavoriteCall" />
						</bean>
						<bean class="org.kuali.rice.ksb.messaging.JavaServiceDefinition">
							<property name="service">
								<ref bean="testExplodingServiceWithDefaults" />
							</property>
							<property name="localServiceName" value="testExplodingServiceWithDefaults" />
						</bean>
						<bean class="org.kuali.rice.ksb.messaging.JavaServiceDefinition">
							<property name="service">
								<ref bean="testJavaSecurityManagementService" />
							</property>
							<property name="localServiceName" value="testJavaSecurityManagementService" />
							<property name="serviceNameSpaceURI" value="KEW" />
						</bean>
						<bean class="org.kuali.rice.ksb.messaging.JavaServiceDefinition">
							<property name="service">
								<ref bean="testExplodingRetryCount" />
							</property>
							<property name="localServiceName" value="testExplodingRetryCount" />
							<property name="retryAttempts" value="2" />
						</bean>
						<bean class="org.kuali.rice.ksb.messaging.JavaServiceDefinition">
							<property name="service">
								<ref bean="testExplodingQueueTimeLimit" />
							</property>
							<property name="localServiceName" value="explodingQueueTimeLimit" />
							<property name="millisToLive" value="2000" />
						</bean>
						<bean class="org.kuali.rice.ksb.messaging.JavaServiceDefinition">
							<property name="service">
								<ref bean="testHarnessSharedTopic" />
							</property>
							<property name="localServiceName" value="repeatTopic" />
							<property name="priority" value="3" />
							<property name="queue" value="false" />
							<property name="retryAttempts" value="1" />
						</bean>
						<bean class="org.kuali.rice.ksb.messaging.JavaServiceDefinition">
							<property name="service">
								<ref bean="testHarnessSharedTopic" />
							</property>
							<property name="serviceNameSpaceURI" value="testAppsSharedTopic" />
							<property name="localServiceName" value="sharedTopic" />
							<property name="priority" value="3" />
							<property name="queue" value="false" />
							<property name="retryAttempts" value="1" />
						</bean>
						<bean class="org.kuali.rice.ksb.messaging.JavaServiceDefinition">
							<property name="service">
								<ref bean="testRepeatMessageQueue" />
							</property>
							<property name="localServiceName" value="testRepeatMessageQueue" />
							<property name="priority" value="3" />
							<property name="retryAttempts" value="1" />
						</bean>
					</list>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="testHarnessSharedTopic" class="org.kuali.rice.ksb.messaging.remotedservices.TestHarnessSharedTopic" />
	<bean id="testRepeatMessageQueue" class="org.kuali.rice.ksb.messaging.remotedservices.TestRepeatMessageQueue" />
	<bean id="testExplodingQueueTimeLimit" class="org.kuali.rice.ksb.messaging.remotedservices.TesetHarnessExplodingQueue" />
	<bean id="testExplodingRetryCount" class="org.kuali.rice.ksb.messaging.remotedservices.TesetHarnessExplodingQueue" />
	<bean id="testExplodingServiceWithDefaults" class="org.kuali.rice.ksb.messaging.remotedservices.TesetHarnessExplodingQueue" />
	<bean id="testLocalServiceFavoriteCall" class="org.kuali.rice.ksb.messaging.remotedservices.GenericTestService" />
	<bean id="soapService" class="org.kuali.rice.ksb.messaging.remotedservices.SOAPServiceImpl" />
	
	<bean id="transactionManager" class="org.springframework.transaction.jta.JtaTransactionManager" lazy-init="true">
		<property name="userTransaction">
			<ref local="jotm" />
		</property>
		<property name="transactionManager">
			<ref local="jotm" />
		</property>
	</bean>	
	<bean id="transactionTemplate" class="org.springframework.transaction.support.TransactionTemplate" lazy-init="true">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
	</bean>
	<bean id="matchAllWithPropReq" class="org.springframework.transaction.interceptor.MatchAlwaysTransactionAttributeSource" lazy-init="true">
		<property name="transactionAttribute">
			<value>PROPAGATION_REQUIRED</value>
		</property>
	</bean>
	<bean id="matchAllTxInterceptor" class="org.kuali.rice.core.database.KualiTransactionInterceptor" lazy-init="true">
		<property name="transactionManager">
			<ref bean="transactionManager" />
		</property>
		<property name="transactionAttributeSource">
			<ref bean="matchAllWithPropReq" />
		</property>
	</bean>

	<bean id="testJavaSecurityManagementService" class="org.kuali.rice.ksb.security.admin.MockJavaSecurityManagementServiceImpl" />

</beans>
