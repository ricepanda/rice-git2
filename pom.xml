                                                        <version>1.5</version>
                                                        <executions>
                                                                <execution>
                                                                        <goals>
                                                                                <goal>revision</goal>
                                                                        </goals>
                                                                        <phase>initialize</phase>
                                                                </execution>
                                                        </executions>
                                                        <configuration>
                                                                <entries>
