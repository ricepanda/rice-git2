							<locateOutputFile>locate.out</locateOutputFile>
						</configuration>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-eclipse-plugin</artifactId>
						<!-- Note that the most recent version of eclipse:eclipse (2.8) cannot be used because it results in
						     an error when trying to perform test resource filtering
						     
						     See here for details: http://jira.codehaus.org/browse/MECLIPSE-551
						     
						     -->
						<version>2.6</version>
					</plugin>
                                        <plugin>
