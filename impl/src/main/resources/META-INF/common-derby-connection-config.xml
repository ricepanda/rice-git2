<!-- provides common derby connection information for embedded derby db used in testing.
Relies on props ${basedir} and ${module.name} to be set.  These are either set by:
1.) maven
2.) test-harness when being ran from eclipse
 -->
<config>
	<param name="datasource.ojb.sequenceManager.className">org.apache.ojb.broker.util.sequence.SequenceManagerInMemoryImpl</param>
	<param name="datasource.ojb.platform">Derby</param>
	<param name="datasource.platform">org.kuali.rice.core.database.platform.DerbyDatabasePlatform</param>
	<param name="db.location">${basedir}/target/derby/${module.name}-db</param>
	<param name="datasource.url">jdbc:derby:${db.location};user=${module.name};create=true</param>
	<param name="datasource.driver.name">org.apache.derby.jdbc.EmbeddedDriver</param>	 	
	<param name="datasource.pool.validationQuery">values(1)</param>
	<param name="datasource.username">${module.name}</param>
	<param name="datasource.password">r1c3</param>
	<param name="datasource.pool.maxWait">30000</param>
	<param name="datasource.pool.size">5</param>
</config>
