<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RIADocTypeMapMaintenanceDocument" parent="RIADocTypeMapMaintenanceDocument-parentBean" />

  <bean id="RIADocTypeMapMaintenanceDocument-parentBean" abstract="true" parent="MaintenanceDocumentEntry">
    <property name="businessObjectClass" value="org.kuali.rice.kew.ria.bo.RIADocTypeMap" />
    <property name="maintainableClass" value="org.kuali.rice.kns.maintenance.KualiMaintainableImpl" />
    <property name="maintainableSections" >
      <list>
        <ref bean="RIADocTypeMapMaintenanceDocument-RIADocTypeMappings" />
      </list>
    </property>
    <property name="lockingKeys" >
      <list>
        <value>ID</value>
      </list>
    </property>
    <!-- 
    <property name="shortLabel" value="RIA DocType Mapping MaintenanceDocument" />
    <property name="summary" value="This document is used to maintain a list of RIA DocType Mappings and their appropriate routings." />
    -->
    <property name="documentTypeName" value="RIADocTypeMapMaintenanceDocument" />
    <property name="businessRulesClass" value="org.kuali.rice.kns.maintenance.rules.MaintenanceDocumentRuleBase" />
    <property name="documentAuthorizerClass" value="org.kuali.rice.kns.document.authorization.MaintenanceDocumentAuthorizerBase" />
  	<!-- 
    <property name="documentTypeCode" value="DTPF" />
