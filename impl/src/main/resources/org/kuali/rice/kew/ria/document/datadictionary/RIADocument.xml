<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="RIADocument" parent="RIADocument-parentBean" />

  <bean id="RIADocument-parentBean" abstract="true" parent="TransactionalDocumentEntry">
   <!--  
    <property name="shortLabel" value="RIA Document" />
    <property name="summary" value="RIA Document" />
    -->
    <property name="documentTypeName" value="RIADocument" />
    <property name="documentClass" value="org.kuali.rice.kew.ria.document.RIADocument" />
    <!-- 
    <property name="businessRulesClass" value="org.kuali.rice.kew.ria.document.rule.RIADocumentRules" />
     -->
    <property name="documentAuthorizerClass" value="org.kuali.rice.kew.ria.authorizer.RIADocumentAuthorizer" />
    <!-- 
    <property name="documentTypeCode" value="RIAD" />
    <property name="authorizations" >
      <list>
        <bean parent="AuthorizationDefinition">
          <property name="authorizedGroups" >
            <set>
              <value>kualiUniversalGroup</value>
            </set>
          </property>
          <property name="action" value="initiate" />
        </bean>
      </list>
    </property>
    <property name="label" value="RIA Document" />
    <property name="description" value="RIA Document" />
     -->
    <property name="attributes" >
      <list>
        <ref bean="RIADocument-xmlContent" />
        <ref bean="RIADocument-riaDocTypeName" />
      </list>
    </property>
  </bean>

<!-- Attribute Definitions -->


  <bean id="RIADocument-xmlContent" parent="RIADocument-xmlContent-parentBean" />

  <bean id="RIADocument-xmlContent-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="xml content" />
    <property name="maxLength" value="5000" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <!-- 
      <bean parent="HiddenControlDefinition" />  -->
      <bean parent="TextControlDefinition" p:size="1" />
      
    </property>
    <property name="summary" value="xml content" />
    <property name="name" value="xmlContent" />
    <property name="label" value="xml content" />
    <property name="description" value="xml content" />
  </bean>
  <bean id="RIADocument-riaDocTypeName" parent="RIADocument-riaDocTypeName-parentBean" />

  <bean id="RIADocument-riaDocTypeName-parentBean" abstract="true" parent="AttributeDefinition">
    <property name="forceUppercase" value="false" />
    <property name="shortLabel" value="ria doc type name" />
    <property name="maxLength" value="100" />
    <property name="validationPattern" >
      <bean parent="AnyCharacterValidationPattern" />
    </property>
    <property name="control" >
      <bean parent="HiddenControlDefinition" />
    </property>
    <property name="summary" value="ria doc type name" />
    <property name="name" value="riaDocTypeName" />
    <property name="label" value="ria doc type name" />
    <property name="description" value="ria doc type name" />
  </bean>
  
  <bean id="RIADocument-versionNumber-parentBean" abstract="true" parent="AttributeReferenceDummy-versionNumber" />
  <bean id="RIADocument-versionNumber" parent="RIADocument-versionNumber-parentBean" />
</beans>
