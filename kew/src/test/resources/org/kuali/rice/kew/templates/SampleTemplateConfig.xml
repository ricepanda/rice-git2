<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="ns:workflow resource:WorkflowData">
    <documentTypes xmlns="ns:workflow/DocumentType" xsi:schemaLocation="ns:workflow/DocumentType resource:DocumentType">
        <documentType>
            <name>SampleDocumentType</name>
            <parent>RiceDocument</parent>
            <label>SampleDocument</label>
            <postProcessorName>org.kuali.rice.kew.postprocessor.DefaultPostProcessor</postProcessorName>
            <docHandler>${kr.url}/maintenance.do?methodToCall=docHandler
            </docHandler>
            <routePaths>
                <routePath>
                    <start name="AdHoc" nextNode="SimpleRequests"/>
                    <requests name="SimpleRequests"/>
                </routePath>

            </routePaths>
            <routeNodes>
                <start name="AdHoc">
                    <activationType>P</activationType>
                </start>
                <requests name="SimpleRequests">
                    <activationType>P</activationType>
                    <ruleTemplate>SampleRuleTemplate</ruleTemplate>
                </requests>
            </routeNodes>
        </documentType>
    </documentTypes>
    <ruleTemplates xmlns="ns:workflow/RuleTemplate" xsi:schemaLocation="ns:workflow/RuleTemplate
            resource:RuleTemplate">
        <ruleTemplate>
            <name>SampleRuleTemplate</name>
            <description>A Sample rule template.
            </description>
        </ruleTemplate>
    </ruleTemplates>
    <rules xmlns="ns:workflow/Rule" xsi:schemaLocation="ns:workflow/Rule resource:Rule">
        <rule>
            <documentType>SampleDocumentType</documentType>
            <ruleTemplate>SampleRuleTemplate</ruleTemplate>
            <description>Sample Rule</description>
            <forceAction>false</forceAction>
            <responsibilities>
                <responsibility>
                    <!-- This user was part of the DefaultSuitTestData that gets loaded into the KEW testing framework -->
                    <principalName>admin</principalName>
                    <actionRequested>A</actionRequested>
                    <priority>1</priority>
                </responsibility>
            </responsibilities>
        </rule>
    </rules>
</data>